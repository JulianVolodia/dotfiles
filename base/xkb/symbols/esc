partial modifier_keys
// Pressing Esc leaves Capslock
xkb_symbols "leave_capslock" {
    key <ESC> {
        type = "ALPHABETIC",
        symbols = [ Escape, Escape ],
        actions [Group1] = [
            SetMods(modifiers=none),
            SetMods(modifiers=Lock,clearLocks)
        ]
    };
};
