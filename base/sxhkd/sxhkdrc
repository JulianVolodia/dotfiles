#
# bspwm hotkeys
#

# Quit bspwm
super + shift + q
	bspc quit

# Close window
super + shift + x
	bspc window -c

# Next layout
super + t
	bspc desktop -l next

# Balance current desktop
super + b
	bspc desktop -B

# Toggle floating/pseudotile/fullscreen
super + {s,d,f}
	bspc window -t {floating,pseudo_tiled,fullscreen}

# Focus previously focused window
super + Tab
	bspc window -f last

# Swap window with biggest window on current desktop
super + m
	bspc window -s biggest

# Focus/move window left/down/up/right
super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

# Focus next/previous window
super + {_,shift + }Tab
	bspc window -f {next,prev}

# Presel left/down/up/right
super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

# Increase window size to the left/down/up/right
super + alt + {h,j,k,l}
	bspc window -e {left -25,down +25,up -25,right +25}

# Decrease window size to the left/down/up/right
super + alt + shift + {h,j,k,l}
	bspc window -e {right -25,up +25,down -25,left +25}

# Set split ratio
super + ctrl + {1-9}
	bspc window -r 0.{1-9}

# Focus/move to desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} \^{1-9,10}

# Move/resize window
super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

# Required for above
super + !button{1-3}
	bspc pointer -t %i %i

# Required for above
super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + y
	termite

super + x
	dmenu_run

super + r
	termite -e ranger

# make sxhkd reload its configuration files:
super + shift + r
	pkill -USR1 -x sxhkd

# Mute source
shift + XF86AudioMute
	pulseaudio-ctl mute-input

# Mute sink
XF86AudioMute
	pulseaudio-ctl mute

# Volume
XF86Audio{Lower,Raise}Volume
	pulseaudio-ctl {down,up}
